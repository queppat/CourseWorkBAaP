<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../styles/main.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="passwordmanager.controllers.MainController">

  <HBox alignment="CENTER" spacing="10" style="-fx-padding: 15px;">
    <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
        <Image url="@../icons/AppIcon.png" />
    </ImageView>
    <Label style="-fx-text-fill: #c06ef2; -fx-font-size: 24px; -fx-font-weight: bold;" text="KeyForge" />
  </HBox>

  <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
    <Tab fx:id="serviceStorageTab" text="Хранилище">
      <fx:include source="service_storage_tab.fxml" />
    </Tab>
    <Tab fx:id="passwordGeneratorTab" text="Генератор паролей">
      <fx:include source="password_generator_tab.fxml" />
    </Tab>

  </TabPane>
</VBox>
