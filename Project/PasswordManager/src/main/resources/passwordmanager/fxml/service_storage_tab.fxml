<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

     <VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="passwordmanager.controllers.ServiceStorageTabController"
           spacing="15" style="-fx-padding: 15px;" stylesheets="@../styles/main.css">
            <TableView fx:id="serviceTable" style="-fx-max-height: 400px;">
                <columns>
                    <TableColumn fx:id="serviceColumn" prefWidth="150" text="Сервис">
                        <cellValueFactory>
                            <PropertyValueFactory property="serviceName" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="usernameColumn" prefWidth="200" text="Логин">
                        <cellValueFactory>
                            <PropertyValueFactory property="username" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <HBox spacing="15" styleClass="button-container">
                <Button fx:id="addButton" onAction="#handleAddPService" text="Добавить" />
                <Button fx:id="deleteButton" onAction="#handleDeleteService" styleClass="button-danger" text="Удалить" />
                <Button fx:id="showPasswordButton" onAction="#showSelectedService" text="Показать пароль" />
            </HBox>
        </VBox>
